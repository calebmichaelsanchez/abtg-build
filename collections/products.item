<div id="product-item" data-url="{item.fullUrl}">
  {.section item}
  <div class="product">
    <img src="{assetUrl}" class="product__item product__image" />
    <div class="product__item product__info">
      <div class="product__title">{title}</div>
      <div class="product__excerpt">{excerpt}</div>
      <div class="product__variants">
        {@|product-price}
        {@|product-status}
        {@|product-checkout}
      </div>
    </div>
  </div>
  {.end}
</div>

